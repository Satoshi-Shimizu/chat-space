.message{data: {message: {id: "#{message.id}"}}}
  .message__upper-info
    %p.message__upper__talker
      = message.user.name
    %p.message__upper-info__date
      = message.created_at.strftime("%Y/%m/%d (%a) %H:%M:%S")
  %p.message__text
    = message.message
    = image_tag message.image.url  if message.image.present?