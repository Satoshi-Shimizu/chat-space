.flash-box
.wrapper
  .chat-side
    = render "groups/side_ber" 
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group
        = @group.name
        %ul.main-header__left-box__member-list
          Memberï¼š
          - @group.users.each do |user|
            %li.main-header__left-box__member-list__member
            = user.name
      = link_to edit_group_path(current_user) do
        .main-header__edit-btn Edit
    .messages
      - @messages.each do |m|
        .message
          .message__upper-info
            %p.message__upper__talker
              = m.user.name
            %p.message__upper-info__date
              = m.created_at
          %p.message__text
            = m.message
    .form
      = form_for [@group, @message] do |f|
        .input-box
          = f.text_field :message, class: 'message_content input-box__text', placeholder: "type a message"
          = f.label :image, class: 'input-box__image'
          %i.fa.fa-image
          %input#message_image.input-box__image__file{name: "message[image]",type: "file"}        
        = f.submit class: 'submit-btn'
